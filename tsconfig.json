{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true ,
    "moduleDetection": "auto",

    "module": "commonjs" ,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,

    "strict": true ,
    "strictPropertyInitialization": false ,
    "skipLibCheck": true 
  }
}
